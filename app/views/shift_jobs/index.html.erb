  <style>
    body { background-color: #FFCFCA; }
  </style>
<div class="container">
<p id="notice"><%= notice %></p>
  <div class="small-1 columns">&nbsp;</div>
	<div class="small-5 columns">&nbsp;</div>
<h1>List of Shift Jobs</h1>

<%= link_to 'New Shift Jobs', new_shift_job_path, :class=> "right" %><br>
<table class="striped">
  <thead>
    <tr>
      <th>Shift</th>
      <th>Job</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shift_jobs.each do |shift_job| %>
      <tr>
        <td><%= shift_job.shift_id %></td>
        <td><%= shift_job.job_id %></td>
        <td><%= link_to 'Show', shift_job %></td>
        <td><%= link_to 'Edit', edit_shift_job_path(shift_job) %></td>
        <td><%= link_to 'Destroy', shift_job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

  <div class="small-1 columns">&nbsp;</div>
	<div class="small-5 columns">&nbsp;</div>
</div>
