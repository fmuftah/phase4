 <style>
    body { background-color: #FFCFCA; }
  </style>
<%= form_with(model: shift, local: true) do |form| %>
  <% if shift.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shift.errors.count, "error") %> prohibited this shift from being saved:</h2>

      <ul>
      <% shift.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
  <div class="field">
    <%= form.label :assignment_id %>
    <%= form.number_field :assignment_id %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.text_field :date, prompt: "Date", class: "datepicker", :value =>
					(form.object.date.strftime('%B %d, %Y') if form.object.date != nil)%>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.text_field :start_time, prompt: "Start Time", class: "timepicker", :value =>
					(form.object.start_time.strftime("%H:%M:%S") if form.object.start_time != nil)%>
  </div>

  <div class="field">
    <%= form.label :end_time %>
     <%= form.text_field :end_time, prompt: "End Time", class: "timepicker", :value =>
					(form.object.end_time.strftime('%H:%M:%S') if form.object.end_time != nil)%>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
